{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GuardResponse",
  "type": "object",
  "required": ["response", "findings", "blocked", "risk_score", "policy_id", "latency_ms", "version"],
  "properties": {
    "response": {"type": "string"},
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": {"type": "string"},
          "action": {"type": "string"},
          "type": {"type": "string"},
          "detail": {"type": "object"}
        },
        "required": ["rule_id", "action", "type"],
        "additionalProperties": true
      }
    },
    "blocked": {"type": "boolean"},
    "risk_score": {"type": "integer", "minimum": 0, "maximum": 100},
    "policy_id": {"type": "string"},
    "latency_ms": {"type": "number", "minimum": 0},
    "version": {"type": "string"}
  },
  "additionalProperties": false
}
